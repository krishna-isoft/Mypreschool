<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
<style name="TextWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
<style name="Btn">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:padding">@dimen/min_padding</item>
        <item name="android:minWidth">@dimen/min_btn_width</item>
        <item name="android:minHeight">@dimen/min_btn_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    

<style name="Editbox">
        <item name="android:width">@dimen/min_width</item>
        <item name="android:minHeight">@dimen/min_edit_height</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:background">@drawable/editboxborder</item>
        <item name="android:layout_height">@dimen/edittxt_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
<style name="Editboxnbarder">
        <item name="android:width">@dimen/min_width</item>
        <item name="android:minHeight">@dimen/min_edit_height</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        
        <item name="android:layout_height">@dimen/edittxt_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    <style name="Photos">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:background">@drawable/editbox_border</item>
    </style>
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>        
</style>

</resources>
